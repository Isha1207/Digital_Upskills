@using DigitaalUpskills.Models

@{ Layout = "~/views/shared/_LayoutUser.cshtml";
    Model1 db = new Model1();
}

<aside id="fh5co-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url('../../Content/images/CourseCategory.jpeg'); ">
                <div class="overlay-gradient"></div>g
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center slider-text">
                            <div class="slider-text-inner">
                                <h1 class="heading-section">COURSE CATEGORY</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="fh5co-course-categories">

    <div class="container">
        <li style="background-image: url(images/img_bg_4.jpg);">
            <div class="row animate-box">
                <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                    <h2>
                        Course categories
                        <a href="@Url.Action("CourseCategory","Home", new { id="null" })" class="list-group-horizontal-sm-action"> <small class="text-muted"> (@db.tbl_Course.Count()) </small> </a>
                    </h2>

                    <p>Here are available different categories of courses for enhance student's skills and knowledge</p>

                </div>
            </div>

            <div class="row">
                @foreach (var item in db.tbl_CourseCategory)
                {
                    <div class="col-lg-4 col-md-4">
                        <div class="fh5co-blog animate-box">
                            <a href="#" class="course-img">
                                <img src="@Url.Content(item.CourseCategory_Image)" class="img-thumbnail" style="width:100% ;height: 200px">
                            </a>
                            <div class="blog-text">
                                <h3><a href="#">@item.CourseCategory_Name</a></h3>
                                @*<span class="posted_on">March. 15th</span>
                                <span class="comment"><a href="">21<i class="icon-speech-bubble"></i></a></span>*@
                                <p>@item.CourseCategory_Details</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </li>
    </div>
            <!-- Category Start -->
            <div class="container-fluid py-5">
                <div class="container pt-5 pb-3">
                    <div class="text-center mb-5">
                        <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Subjects</h5>
                        <h1>Explore Top Subjects</h1>
                    </div>
                    @foreach (var item in db.tbl_CourseCategory)
                    {
                        <div class="row">

                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="cat-item position-relative overflow-hidden rounded mb-2">
                                    <img class="img-fluid" src="@Url.Content(item.CourseCategory_Image)" alt="">
                                    <a class="cat-overlay text-white text-decoration-none" href="">
                                        <h4 class="text-white font-weight-medium">@item.CourseCategory_Name</h4>
                                        <span>100 Courses</span>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
            <!-- Category Start -->
            <div id="fh5co-course-categories">

                <div class="container">
        <li style="background-image: url(images/img_bg_4.jpg);">
            <div class="row animate-box">
                <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                    <h2>
                        Course categories
                        <a href="@Url.Action("CourseCategory","Home", new { id="null" })" class="list-group-horizontal-sm-action"> <small class="text-muted"> (@db.tbl_Course.Count()) </small> </a>
                    </h2>

                    <p>Here are available different categories of courses for enhance student's skills and knowledge</p>

                </div>
            </div>
            <div class="row">

                @foreach (var item in db.tbl_CourseCategory)
                {

                    <div class="col-md-3 col-sm-6 text-center animate-box">
                        <div class="services">
                            @*<span class="icon">
                                    <i class="icon-book"></i>
                                </span>*@
                            <div class="desc">
                                <h3>
                                    <a href="#" class="course-img">
                                        <img src="@Url.Content(item.CourseCategory_Image)" style="width:100% ;height: 200px">
                                    </a>
                                    <a href="@Url.Action("Courses", "Home", new { id = item.CourseCategory_Id })">@item.CourseCategory_Name <small class="text-muted"> (@item.tbl_Course.Count)</small></a>
                                </h3>
                                <p>@item.CourseCategory_Details</p>
                            </div>
                        </div>
                    </div>

                }
            </div>

    </div>
</div>
