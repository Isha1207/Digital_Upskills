                                    <li>
                                        <span data-toggle="modal" data-target="#course-modal">
                                            <i class="icon-search4 btn btn-primary"></i>
                                            <a href="#!"><i class="icon-heart btn btn-primary"></i></a>
                                            <a href="@Url.Action("AddToCart", "Cart", new { id = item.Course_Id })"><i class="icon-shopping-cart btn btn-primary"></i></a>
                                        </span>
                                    </li>
                                    <li>
                                        <a href="#!"><i class="icon-heart btn btn-primary"></i></a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AddToCart", "Cart", new { id = item.Course_Id })"><i class="icon-shopping-cart btn btn-primary"></i></a>
                                    </li>
                                </ul>*@
                                <a href="@Url.Action("CourseSingle","Home" , new { id = item.Course_Id })" class="btn btn-primary btn-sm btn-course">View Course Details</a>
                                <span><a href="@Url.Action("AddToCart", "Cart",new {id =item.Course_Id})" class=" icon-shopping-cart btn btn-primary btn-sm btn-course">@*Add to Cart*@</a></span>
                            </div>
