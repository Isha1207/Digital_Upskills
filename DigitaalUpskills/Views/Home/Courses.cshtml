@using DigitaalUpskills.Models

@{ Layout = "~/views/shared/_LayoutUser.cshtml";
    Model1 db = new Model1();
}

<aside id="fh5co-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url('../../Content/images/Courses.jpeg');">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center slider-text">
                            <div class="slider-text-inner">
                                <h1 class="heading-section">Our Course</h1>

                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="fh5co-course">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>Our Course</h2>
                <p>Dignissimos asperiores vitae velit veniam totam fuga molestias accusamus alias autem provident. Odit ab aliquam dolor eius.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in db.tbl_Course)
            {
                if (ViewData["catid"] == null || item.CourseCategory_Fid == (int)ViewData["catid"])
                {
                    <div class="col-lg-4 col-md-4">
                        <div class="fh5co-blog animate-box">
                            <a href="#" class="course-img">
                                <img src="@Url.Content(item.Course_Image)"class="img-thumbnail" style="width:100% ;height: 200px">
                            </a>
                            <div class="blog-text">
                                <h3><a href="#">@item.Course_Name</a></h3>
                                @*<span>@item.Course_Code</span>
                                <p>@item.Course_Fee</p>*@
                                <p>@item.Course_Detail</p>
                               
                                @*<span class="comment"><a href="">21<i class="icon-speech-bubble"></i></a></span>*@
                               
                              <ul>
                                <li>
                                   <span data-toggle="modal" data-target="#course-modal">
                                             <i class="icon-search3 btn btn-primary btn-sm btn-course"></i>
                                           <a class=" icon-bookmark btn btn-primary btn-sm btn-course" href="#!">@*<i class="icon-heart "></i>*@</a>
                                              <a href="@Url.Action("AddToCart", "Cart", new { id = item.Course_Id })"><i class="icon-shopping-cart btn btn-primary btn-sm btn-course"></i></a>
                                   </span>
                               </li>
                                @*<li>
            <a href="#!"><i class="icon-heart btn btn-primary"></i></a>
        </li>
        <li>
            <a href="@Url.Action("AddToCart", "Cart", new { id = item.Course_Id })"><i class="icon-shopping-cart btn btn-primary"></i></a>
        </li>*@
                               </ul>
                            </div>
                        </div>
                    </div>
                }
            }
                </div>
        <section class="products section bg-gray">
            <div class="container">
                @*<div class="row">
                    <div class="title text-center">
                        <h2>Our Courses</h2>
                    </div>
                </div>*@
                <div class="row">
                    @foreach (var item in db.tbl_Course)
                    {
                        if (ViewData["catid"] == null || item.CourseCategory_Fid == (int)ViewData["catid"])
                        {
                            <div class="col-md-4">
                                <div class="product-item">
                                    <div class="product-thumb">
                                        @*<span class="bage">sale</span>*@
                                        <img class="img-responsive" src="@Url.Content(item.Course_Image)" @*alt="product-img"*@ />
                                        <div class="preview-meta">
                                            <ul>
                                                <li>
                                                    <span data-toggle="modal" data-target="#course-modal">
                                                        <i class="icon-search4"></i>
                                                    </span>
                                                </li>
                                                <li>
                                                    <a href="#!"><i class="icon-heart"></i></a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("AddToCart", "Cart", new { id = item.Course_Id })"><i class="icon-shopping-cart"></i></a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <h4><a href="product-single.html">@item.Course_Name</a></h4>
                                        <p class="price">@item.Course_Fee</p>
                                    </div>
                                </div>
                            </div>


                            <!-- Modal -->
                            <div class="modal course-modal fade" id="course-modal">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <i class="tf-ion-close"></i>
                                </button>
                                <div class="modal-dialog " role="document">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-8 col-sm-6 col-xs-12">
                                                    <div class="modal-image">
                                                        <img class="img-responsive" src="@Url.Content(item.Course_Image)" @*alt="product-img"*@ />
                                                    </div>
                                                </div>
                                                <div class="col-md-4 col-sm-6 col-xs-12">
                                                    <div class="product-short-details">
                                                        <h2 class="product-title">@item.Course_Name</h2>
                                                        <p class="product-detail">Course Code: @item.Course_Code</p>
                                                        <p class="product-detail">Course Duration: @item.Course_Duration</p>
                                                        <p class="product-price">Course Fee: @item.Course_Fee</p>
                                                        <p class="product-short-description">
                                                           Course Detail: @item.Course_Detail
                                                        </p>
                                                        <a href="@Url.Action("AddToCart", "Cart", new { id = item.Course_Id })" class="btn btn-primary">Add To Cart</a>
                                                        <a href="@Url.Action("CourseSingle","Home" , new { id = item.Course_Id })" class="btn btn-primary">View Course Details</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- /.modal -->
                        }
                    }
                </div>
            </div>
        </section>

        <div class="row">
            @foreach (var item in db.tbl_Course)
            {
                if (ViewData["catid"] == null || item.CourseCategory_Fid == (int)ViewData["catid"])
                {
                    <div class="col-md-6 animate-box">
                        <div class="course">
                            <a href="#" class="course-img">
                                <img src="@Url.Content(item.Course_Image)" style="width:100% ;height: 200px">
                            </a>
                            <div class="desc">
                                <h3><a href="#">@item.Course_Name</a></h3>
                                @*<h3><a href="#">@item.Course_Code</a></h3>
                                <p>@item.Course_Detail</p>*@
